{
  "description": "",
  "main": "index.js",
  "scripts": {
    "test": "pnpm -r run test",
    "format:check": "biome format .",
    "format": "biome format --write",
    "check-types": "pnpm -r run check-types",
    "build": "pnpm -r run build",
    "build:packages": "pnpm  --filter './packages/**' -r run build",
    "dev": "pnpm -r --parallel run dev",
    "lint": "biome lint --write",
    "lint:check": "biome lint .",
    "prepare": "husky",
    "ci:version": "pnpm changelog && pnpx changeset version && pnpm install --no-frozen-lockfile && git add .",
    "ci:publish": "pnpm publish -r --access=public"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/rubenvanrooij/dynz"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "packageManager": "pnpm@10.12.1",
  "type": "module",
  "engines": {
    "node": ">=22.14.0"
  },
  "lint-staged": {
    "packages/*/src/**/*.{ts, tsx}": [
      "biome format --no-errors-on-unmatched --write",
      "biome lint --no-errors-on-unmatched --write"
    ],
    "packages/*/**/*.json": [
      "biome format --no-errors-on-unmatched --write",
      "biome lint --no-errors-on-unmatched --write"
    ],
    "packages/*/**/*.md": [
      "prettier --ignore-unknown --write"
    ]
  },
  "devDependencies": {
    "@biomejs/biome": "^2.2.2",
    "@changesets/cli": "^2.29.6",
    "@eslint/js": "^9.29.0",
    "@vitest/coverage-v8": "3.2.4",
    "eslint": "^9.29.0",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-prettier": "^5.5.0",
    "globals": "^16.2.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.6",
    "prettier": "^3.5.3",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "typescript-eslint": "^8.34.1",
    "vitest": "^3.2.4"
  }
}
